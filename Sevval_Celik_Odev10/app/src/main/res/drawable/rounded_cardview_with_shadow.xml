<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Köşeli radiusu olan bir shape -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <!-- Shadow efekti -->
    <item
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#EADEF4" />
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />
        </shape>
    </item>

</layer-list>
