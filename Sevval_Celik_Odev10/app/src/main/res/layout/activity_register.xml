<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EADEF4"
    tools:context=".RegisterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#43768E"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_black"
            android:text="WELCOME"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="22dp" />


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#74C8A1FE"
            android:backgroundTint="#74C8A1FE"
            app:cardBackgroundColor="#FCE5ED"
            app:cardCornerRadius="20dp">

            <Button
                android:id="@+id/buton_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="120dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#82CFFE"
                android:text="Sign In" />


            <EditText
                android:id="@+id/txt_username"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:fontFamily="@font/poppins_black"
                android:hint="Username"
                android:inputType="text"
                android:textColor="#18409A"
                android:textColorHighlight="#18409A"
                android:textColorHint="#18409A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_password"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="100dp"
                android:ems="10"
                android:fontFamily="@font/poppins_black"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#18409A"
                android:textColorHighlight="#18409A"
                android:textColorHint="#18409A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buton_registe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginTop="200dp"
                android:backgroundTint="#C0B9FB"
                android:text="Register" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>